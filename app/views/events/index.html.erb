<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table width="600px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>Amount</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events = @events.order(:start_time => :asc) %>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time.to_date %></td>
        <td><%= event.amount %></td>
        <td><%= event.account.name %> </td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

